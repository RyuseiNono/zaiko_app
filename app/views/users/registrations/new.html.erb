<%= render "shared/header"%>

<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto alert alert-primary pb-5">
      <div class='font-wight-bold h1 py-3 text-center'>
        一般ユーザー<br class='d-block d-sm-none'>情報入力
      </div>
      <%= form_with model: @user, url: user_registration_path,local: true do |f| %>
        <%= render partial: "shared/registration_form" ,locals: { f: f } %>
        <div class='register-btn mt-4'>
          <%= button_tag type: 'submit', class: "btn btn-block btn-outline-primary", id: 'user_registration_submit' do %>
            会員登録<i class="fas fa-user-plus mx-1 mx-1"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/second-footer"%>
