<%= render "shared/header"%>
<div class="container my-3">
  <p class="h4 font-weight-bold text-center">店舗の情報を確認</p>
    <div>
      <p>店舗名:<%= @shop.name %></p>
      <p>店舗の都道府県:<%= @shop.prefecture.name %></p>
      <p>所在地:<%= @shop.location %></p>
      <p>電話番号:<%= @shop.phone_number %></p>
      <p>営業時間:</p>
      <p>開店時間：<%= format("%02d:%02d", @shop.opening_time.hour, @shop.opening_time.min) %></p>
      <p>閉店時間：<%= format("%02d:%02d", @shop.closing_time.hour, @shop.closing_time.min) %></p>
      <p>駐車場の有無:<%= @shop.parking.name %></p>
      <p>クレジットカードの利用:<%= @shop.credit_card.name %></p>
      <p>電子マネーの利用:<%= @shop.electronic_money.name %></p>
    </div>

    <%= form_with model:@shop ,local: true do |f| %>
      <div>
        <%= f.hidden_field :image %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :prefecture_id %>
        <%= f.hidden_field :location %>
        <%= f.hidden_field :phone_number %>
        <%= f.hidden_field :opening_time %>
        <%= f.hidden_field :closing_time %>
        <%= f.hidden_field :parking_id %>
        <%= f.hidden_field :credit_card_id %>
        <%= f.hidden_field :electronic_money_id %>
      </div>


      <div class="sell-btn-contents">
        <%= f.submit '修正する' ,class:"btn btn-secondary" ,name: 'back' %>
        <%= f.submit "店舗登録" ,class:"btn btn-success" %>
      </div>
    <% end %>
</div>
<%= render "shared/second-footer"%>
