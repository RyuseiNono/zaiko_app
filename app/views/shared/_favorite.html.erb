<% if admin_signed_in? %>
  <% if shop.favorited_by?(current_admin) %>
    <%=link_to  shop_favorite_path(shop.id, current_admin.id), class: "text-danger", method: :delete, remote: true do %>
      <i class="fas fa-heart"><%= shop.favorites.count %></i>
    <% end %>
  <% else %>
    <%=link_to  shop_favorites_path(shop.id), class: "text-muted", method: :post, remote: true do %>
      <i class="far fa-heart"><%= shop.favorites.count %></i>
    <% end %>
  <% end %>
<% elsif user_signed_in? %>
  <% if shop.favorited_by?(current_user) %>
    <%=link_to  shop_favorite_path(shop.id, current_user.id), class: "text-danger", method: :delete, remote: true do %>
      <i class="fas fa-heart"><%= shop.favorites.count %></i>
    <% end %>
  <% else %>
    <%=link_to  shop_favorites_path(shop.id), class: "text-muted", method: :post, remote: true do %>
      <i class="far fa-heart"><%= shop.favorites.count %></i>
    <% end %>
  <% end %>
<% else %>
  <div class="text-danger"><i class="fas fa-heart"><%= shop.favorites.count %></i></div>
<% end %>
