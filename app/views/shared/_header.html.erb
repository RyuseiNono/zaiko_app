<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <div class="icon col-md-4">
      <%= link_to image_tag("zaicocco.png", class:"w-25"), "/" %>
      <a href="/" class="btn">ZaiCoCCo</a>
    </div>
    <div class="input-group col-md-8">
      <form class="search-form " action="#">
        <input class='input-box' placeholder='キーワードから探す'>
        <button class="search-button">
          <%= image_tag "search.png", class:"search-icon" %>
        </button>
      </form>
    </div>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to '店舗を編集する', shops_path, class: "category-list" %></li>
      <li><%= link_to 'huga', "#", class: "brand-list" %></li>
    </ul>
    <ul class='lists-right'>
      <% if admin_signed_in?%>
        <li><%= link_to current_admin.name,"#", class: "btn btn-info mr-1" %></li>
        <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary" %></li>
      <% else %>
      <li><%= link_to 'ログイン', new_admin_session_path, class: "btn btn-primary mr-1" %></li>
      <li><%= link_to '新規登録', new_admin_registration_path, class: "btn btn-outline-primary" %></li>
      <% end %>
    </ul>
  </div>
</header>
